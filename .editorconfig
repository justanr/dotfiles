root = true

[*]
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4

[*.{js,py,html,css,less,yml,yaml,json}]
charset = utf-8

[*.py]
insert_final_newline = false

[*.{js,jsx,ts,tsx}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{json,yaml,yml}]
indent_size = 2

[*.{ini,html}]
indent_size = 4
